@using IMR.Utils;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        @{Html.RenderAction("_Header", "Home");}
        @{Html.RenderAction("_Menu", "Home");}
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <div class="tuev-logo"><a href="~/@System.Threading.Thread.CurrentThread.CurrentUICulture.Name.Substring(0, 2)/@Resources.IMRResources.Quality.GenerateSeoTitle()"><img src="~/img/tuev_logo.jpg" alt=""></a></div>
            <p>&copy; @DateTime.Now.Year, IMR GmbH</p>
            <ul>
                <li><a href="~/@System.Threading.Thread.CurrentThread.CurrentUICulture.Name.Substring(0, 2)/@Resources.IMRResources.Contact.GenerateSeoTitle()">@Resources.IMRResources.Contact</a>&nbsp;|&nbsp;</li>
                <li><a href="~/@System.Threading.Thread.CurrentThread.CurrentUICulture.Name.Substring(0, 2)/@Resources.IMRResources.Disclaimer.GenerateSeoTitle()">@Resources.IMRResources.Disclaimer</a></li>
            </ul>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
