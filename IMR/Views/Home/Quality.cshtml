@using System.Threading;
@model IMR.ViewModels.SettingDetailVM
@{
    ViewBag.Title = Resources.IMRResources.Quality;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-3 left-panel">
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <img src="~/img/@Model.Avatar" />
        }
        @{Html.RenderAction("_Address", "Home");}
        @{Html.RenderPartial("_Contact");}
    </div>

    <article class="col-sm-9">
        <h2>@Model.Name</h2>
        <span class="content">@Html.Raw(Model.Description)</span>
    </article>
</div>
